<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


    <TextView
        android:id="@+id/inputName"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:textAllCaps="false"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:text="Porteiro fulano de tal"
        android:textColor="#666666"
        android:textSize="21dp" />

        <Button
            android:id="@+id/editarConta"
            android:text="Editar"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_marginTop="19dp"
            android:background="#e6e6e6"/>

    </TableRow>

    <TextView
        android:id="@+id/inputCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/id3"
        android:text="    "
        android:textColor="#666666"
        android:textSize="20dp" />



    <Button
        android:id="@+id/inputEmail"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/email1"
        android:text="    "
        android:textColor="#666666"
        android:textSize="20dp" />


    <Button
        android:id="@+id/inputPassword"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:paddingRight="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/senha1"
        android:gravity="left|center_vertical"
        android:text="    "
        android:textColor="#666666"
        android:textSize="20dp" />

    <Button
        android:id="@+id/inputPhone"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/phone1"
        android:text="    "
        android:textColor="#666666"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/inputSair"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:background="#e6e6e6"
            android:text="   Sair da conta "
            android:textColor="#666666"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>

